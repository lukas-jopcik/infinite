{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowTableAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-central-1:*:table/infinite-nasa-apod-*",
        "arn:aws:dynamodb:eu-central-1:*:table/infinite-nasa-apod-*/index/*"
      ]
    },
    {
      "Sid": "AllowTableManagement",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeTable",
        "dynamodb:ListTables",
        "dynamodb:DescribeTimeToLive",
        "dynamodb:ListTagsOfResource"
      ],
      "Resource": "arn:aws:dynamodb:eu-central-1:*:table/infinite-nasa-apod-*"
    }
  ]
}
